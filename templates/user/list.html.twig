{% extends 'base.html.twig' %}

{% block title %}
    lista do usuario
{% endblock %}

{% block body %}
    <div class="mt-3">
        <a
                href="{{ path('user_create') }}"
                class="btn btn-primary"
        >
            criar usuario
        </a>
        <hr>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">nome</th>
                    <th scope="col">sobre nome</th>
                    <th scope="col">email</th>
                    <th scope="col">criado em</th>
                    <th scope="col">opções</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td scope="row">{{ user.firstName }}</td>
                        <td scope="row">{{ user.lastName }}</td>
                        <td scope="row">{{ user.email }}</td>
                        <td scope="row">{{ user.createdAt|date('d/m/y H:i:s') }}</td>
                        <td scope="row">
                            <a
                                    href="{{ path('user_edit', { 'id': user.id }) }}"
                                    class="btn btn-primary"
                            >
                                editar
                            </a>
                            <a
                                    href="{{ path('user_remove', { 'id': user.id }) }}"
                                    class="btn btn-danger"
                            >
                                remover
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
