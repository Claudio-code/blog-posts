{% extends 'base.html.twig' %}

{% block title %}
    lista do usuario
{% endblock %}

{% block body %}
    <div class="mt-3">
        <a
                href="{{ path('post_create') }}"
                class="btn btn-primary"
        >
            criar post
        </a>
        <hr>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">titulo</th>
                <th scope="col">descrição</th>
                <th scope="col">slug</th>
                <th scope="col">conteudo</th>
                <th scope="col">criado em</th>
                <th scope="col">opções</th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td scope="row">{{ post.title }}</td>
                    <td scope="row">{{ post.description }}</td>
                    <td scope="row">{{ post.slug }}</td>
                    <td scope="row">{{ post.content }}</td>
                    <td scope="row">{{ post.createdAt|date('d/m/y H:i:s') }}</td>
                    <td scope="row">
                        <a
                                href="{{ path('post_edit', { 'id': post.id }) }}"
                                class="btn btn-primary"
                        >
                            editar
                        </a>
                        <a
                                href="{{ path('post_remove', { 'id': post.id }) }}"
                                class="btn btn-danger"
                        >
                            remover
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
